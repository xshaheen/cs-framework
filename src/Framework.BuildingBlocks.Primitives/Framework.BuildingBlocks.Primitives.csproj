<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyName>$(Product).$(RootNamespace)</AssemblyName>
  </PropertyGroup>

  <PropertyGroup Label="Primitives Generator Settings">
    <PrimitiveGeneratorTypeConverters>true</PrimitiveGeneratorTypeConverters>
    <PrimitiveGeneratorJsonConverters>true</PrimitiveGeneratorJsonConverters>
    <PrimitiveGeneratorXmlConverters>true</PrimitiveGeneratorXmlConverters>
    <PrimitiveGeneratorNswagSwaggerConverters>true</PrimitiveGeneratorNswagSwaggerConverters>
    <PrimitiveGeneratorSwashbuckleSwaggerConverters>true</PrimitiveGeneratorSwashbuckleSwaggerConverters>
    <PrimitiveGeneratorEntityFrameworkCoreValueConverters>true</PrimitiveGeneratorEntityFrameworkCoreValueConverters>
  </PropertyGroup>

  <ItemGroup Label="Primitives Generator Settings">
    <CompilerVisibleProperty Include="PrimitiveGeneratorJsonConverters" />
    <CompilerVisibleProperty Include="PrimitiveGeneratorTypeConverters" />
    <CompilerVisibleProperty Include="PrimitiveGeneratorXmlConverters" />
    <CompilerVisibleProperty Include="PrimitiveGeneratorSwashbuckleSwaggerConverters" />
    <CompilerVisibleProperty Include="PrimitiveGeneratorNswagSwaggerConverters" />
    <CompilerVisibleProperty Include="PrimitiveGeneratorEntityFrameworkCoreValueConverters" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" />
    <PackageReference Include="Microsoft.OpenApi" />
    <PackageReference Include="NJsonSchema" />
    <PackageReference Include="Swashbuckle.AspNetCore.SwaggerGen" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Framework.BuildingBlocks\Framework.BuildingBlocks.csproj" />
    <ProjectReference Include="..\Framework.BuildingBlocks.Domains\Framework.BuildingBlocks.Domains.csproj" />
    <ProjectReference Include="..\Framework.Generator.Primitives.Abstractions\Framework.Generator.Primitives.Abstractions.csproj" />
    <ProjectReference Include="..\Framework.Generator.Primitives\Framework.Generator.Primitives.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" PrivateAssets="all" ExcludeAssets="runtime" />
  </ItemGroup>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>Generated</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Framework.Generator.Primitives\Framework.Generator.Primitives.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
  </ItemGroup>

</Project>
